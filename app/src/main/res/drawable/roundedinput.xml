<!-- rounded_input.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#F1F3F4" /> <!-- Set the background color -->
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->
            <stroke
                android:width="1dp"
                android:color="#E8A619" /> <!-- Set the focused border color (orange) -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#F1F3F4" /> <!-- Set the background color -->
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->
            <stroke
                android:width="1dp"
                android:color="#BCBCBA" /> <!-- Set the default border color -->
        </shape>
    </item>
</selector>
